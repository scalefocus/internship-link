@model InternshipLink.Web.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@if(Model.IsAdult)
{

}

<div class="row">
    <div class="col-md-4">
        <address>
            One Microsoft Way<br />
            Redmond, WA 98052-6399<br />
            <abbr title="Phone">P:</abbr>
            425.555.0100
        </address>

        <address>
            <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
            <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
        </address>
    </div>
    <div class="col-md-8">
        <h3>Send a message</h3>
        <form action="/Home/Contact" method="post" class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                <div class="col-ms-10">
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-ms=2" for="Email">Email:</label>
                <div class="col-ms-10">
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" />
                </div>
            </div>
            <div>
                <button>Submit</button>
            </div>
        </form>
    </div>
</div>